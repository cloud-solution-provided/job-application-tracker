<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Applications</h5>
                    <h2 class="card-text"><%= analytics.totalApplications %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Selected</h5>
                    <h2 class="card-text"><%= analytics.statusDistribution.selected %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Not Selected</h5>
                    <h2 class="card-text"><%= analytics.statusDistribution.notSelected %></h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Application Status Distribution</h5>
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Application Timeline</h5>
                    <canvas id="timelineChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Status Distribution Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Applied', 'Selected', 'Not Selected'],
            datasets: [{
                data: [
                    <%- analytics.statusDistribution.applied %>,
                    <%- analytics.statusDistribution.selected %>,
                    <%- analytics.statusDistribution.notSelected %>
                ],
                backgroundColor: ['#5eb1bf', '#fe7b45', '#d84727']
            }]
        }
    });

    // Timeline Chart (placeholder data)
    const timelineCtx = document.getElementById('timelineChart').getContext('2d');
    new Chart(timelineCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Applications',
                data: [5, 8, 12, 15, 18, 20],
                borderColor: '#0d2a2b',
                tension: 0.1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

<%- include('partials/footer') %> 